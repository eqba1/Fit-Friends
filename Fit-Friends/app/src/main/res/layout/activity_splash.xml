<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splashLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary_1"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/fit_friends_transparent"
        app:srcCompat="@drawable/fit_friends_transparent"
        />

    <ProgressBar
        android:id="@+id/progressbarSplashActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:indeterminateTint="#9D7FD3" />

    <TextView
        android:id="@+id/splashActivityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/nazli"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/splashScreenTextView"
        android:textAlignment="center"
        android:textColor="#D69E8C"
        android:textSize="17sp"
        android:textStyle="bold" />

</LinearLayout>